<h2>Edit Product</h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="">
    <%= f.input :description %>
  </div>
  <div class="">
    <%= f.input :price %>
  </div>
  <div class="">
    <%= f.input :quantity %>
  </div>

  <% if @product.image.present? %>
    <span>目前商品图</span> <br>
    <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <div class="">
    <%= f.input :image, as: file %>
  </div>


  <%= f.submit "Submit", data: { disable_with: "Submitting..."} %>
<% end %>
